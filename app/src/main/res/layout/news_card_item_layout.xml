<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_news_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:alpha="0.96">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/news_item_background"
        android:orientation="horizontal"

        android:padding="14dp">


        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="14dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp"
            >


            <ImageView
                android:id="@+id/iv_news_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_school"

                android:contentDescription="@string/news_image_desc" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="News Title"
                android:textColor="@color/news_title_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_news_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="News Description"
                android:textColor="@color/news_desc_color"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_news_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2 hours ago"
                android:textColor="@color/news_time_color"
                android:textSize="12sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>